{
  "name": "demo_csv_workflow",
  "description": "Read demo.csv, drop last row, write cleaned.csv",
  "type": "sequential",
  "parameters": {
    "input_path": "input/demo.csv",
    "output_path": "output/cleaned.csv"
  },
  "activities": [
    {
      "name": "read_csv",
      "type": "file_input",
      "path": "${parameters.input_path}"
    },
    {
      "name": "select_columns1",
      "type": "transform",
      "input_key": "read_csv",
      "output_key": "cleaned_df",
      "transformation_type": "custom_code",
      "transformation_params": { 
        "code": "df['total'] = df['Age'] + df['Score']"
      }
    },
    {
      "name": "write_csv",
      "type": "file_output",
      "input_key": "cleaned_df",
      "path": "${parameters.output_path}"
    }
  ]
}
